<h1>Admin::Items#index</h1>
<h2>商品一覧</h2>
<div>
    <table class="container-fluid">
        <thead>
            <th class="row-fluid">
                <td class="col-3">商品画像</td>
                <td class="col-3">商品名</td>
                <td class="col-3">金額</td>
                <td class="col-3">ステータス</td>
            </th>
        </thead>
        <tbody>
            <% @item.each do |item| %>
            <tr class="row-fluid">
                <td class="col-3"><%= item.i_image(50,50) %></td>
                <td class="col-3"><%= item.name %></td>
                <td class="col-3"><%= item.price %></td>
                <td class="col-3">
                    <% if item.is_active? %>
                        <p>販売中</p>  
                    <% else %>
                        <p>販売停止中</p>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
